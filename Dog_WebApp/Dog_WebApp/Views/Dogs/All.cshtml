@using Dog_WebApp.Models
@model IEnumerable<DogAllViewModel>

@{
    ViewData["Title"] = "All";
}

<h1>All Dogs</h1>
<p>
    <a asp-action="Create">Create new Dog</a>
</p>
<form asp-controller="Dogs" asp-action="All" method="get">
    <p>
        Breed:<input type="text" name="SearchStringBreed" />
        Name:<input type="text" name="SearchStringName" />
        <input type="submit" name="Filter" />
    </p>
</form>
<form asp-controller="Dogs" asp-action="Sort" method="get">
    <p>
        
        <input type="submit" name="Sort" />
    </p>
</form>

<table class="table">
    <thead>
        
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Image)" alt="Image" width="100" />
                @*@Html.DisplayFor(modelItem => item. Picture)*@
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Dogs" asp-route-id="@item.Id">Edit</a>
                <a asp-for="Details"  asp-route-id="@item.Id">Details</a>
                <a asp-for="Delete" asp-route-id="@item.Id">Delete</a>
            </td>

        </tr>
        }
    <tbody>
</table>