@model AitLineApp1.Entities.Plane

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Plane</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PlaneCode" class="control-label"></label>
                <input asp-for="PlaneCode" class="form-control" />
                <span asp-validation-for="PlaneCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaneModel" class="control-label"></label>
                <input asp-for="PlaneModel" class="form-control" />
                <span asp-validation-for="PlaneModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlaneImage" class="control-label"></label>
                <input asp-for="PlaneImage" class="form-control" />
                <span asp-validation-for="PlaneImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeightOfLagage" class="control-label"></label>
                <input asp-for="WeightOfLagage" class="form-control" />
                <span asp-validation-for="WeightOfLagage" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BarOnBoard" /> @Html.DisplayNameFor(model => model.BarOnBoard)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SeatsForPassengers" class="control-label"></label>
                <input asp-for="SeatsForPassengers" class="form-control" />
                <span asp-validation-for="SeatsForPassengers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
